{
    "info": {
        "_postman_id": "flow-11-admin-manages-comments",
        "name": "Flow 11: Admin Manages Video Comments",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "1. Client User Registers and Logs In",
            "event": [
                {"listen": "prerequest", "script": {"exec": ["pm.environment.set(\"user11Email\", pm.variables.replaceIn('user11-{{$randomFirstName}}@example.com'));"], "type": "text/javascript"}},
                {"listen": "test", "script": {"exec": ["var jsonData = pm.response.json();", "pm.environment.set(\"clientAuthToken11\", jsonData.token);"], "type": "text/javascript"}}
            ],
            "request": {"method": "POST", "header": [], "body": {"mode": "raw", "raw": "{\n    \"name\": \"Flow 11 User\",\n    \"email\": \"{{user11Email}}\",\n    \"password\": \"password123\",\n    \"confirmPassword\": \"password123\"\n}", "options": {"raw": {"language": "json"}}}, "url": {"raw": "{{baseUrl}}/usuarios", "host": ["{{baseUrl}}"], "path": ["usuarios"]}}
        },
        {
            "name": "2. Client Adds a Comment to a Video",
            "event": [{"listen": "test", "script": {"exec": ["var jsonData = pm.response.json();", "pm.environment.set(\"commentId\", jsonData.id);"], "type": "text/javascript"}}],
            "request": {"auth": {"type": "bearer", "bearer": [{"key": "token", "value": "{{clientAuthToken11}}", "type": "string"}]}, "method": "POST", "header": [], "body": {"mode": "raw", "raw": "{\n    \"content\": \"This is a comment that will be reviewed by an admin.\"\n}", "options": {"raw": {"language": "json"}}}, "url": {"raw": "{{baseUrl}}/social/videos/{{videoId}}/comments", "host": ["{{baseUrl}}"], "path": ["social", "videos", "{{videoId}}", "comments"]}}
        },
        {
            "name": "3. Admin Login",
            "event": [{"listen": "test", "script": {"exec": ["var jsonData = pm.response.json();", "pm.environment.set(\"adminAuthToken\", jsonData.token);"], "type": "text/javascript"}}],
            "request": {"method": "POST", "header": [], "body": {"mode": "raw", "raw": "{\n    \"email\": \"admin@example.com\",\n    \"password\": \"adminpass\"\n}", "options": {"raw": {"language": "json"}}}, "url": {"raw": "{{baseUrl}}/auth/login", "host": ["{{baseUrl}}"], "path": ["auth", "login"]}}
        },
        {
            "name": "4. Admin Deletes the Comment",
            "request": {"auth": {"type": "bearer", "bearer": [{"key": "token", "value": "{{adminAuthToken}}", "type": "string"}]}, "method": "DELETE", "header": [], "url": {"raw": "{{baseUrl}}/social/comments/{{commentId}}", "host": ["{{baseUrl}}"], "path": ["social", "comments", "{{commentId}}"]}}
        }
    ],
    "variable": [{"key": "baseUrl", "value": "http://localhost:8088"}]
}
