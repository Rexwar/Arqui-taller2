{
    "info": {
        "_postman_id": "flow-04-client-password-playlist",
        "name": "Flow 04: Client Manages Password and Playlist",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "1. Register New Client User",
            "event": [{"listen": "prerequest", "script": {"exec": ["pm.environment.set(\"user4Email\", pm.variables.replaceIn('user4-{{$randomFirstName}}@example.com'));"], "type": "text/javascript"}}],
            "request": {"method": "POST", "header": [], "body": {"mode": "raw", "raw": "{\n    \"name\": \"Flow 4 User\",\n    \"email\": \"{{user4Email}}\",\n    \"password\": \"password123\",\n    \"confirmPassword\": \"password123\"\n}", "options": {"raw": {"language": "json"}}}, "url": {"raw": "{{baseUrl}}/usuarios", "host": ["{{baseUrl}}"], "path": ["usuarios"]}}
        },
        {
            "name": "2. Login as New User",
            "event": [{"listen": "test", "script": {"exec": ["var jsonData = pm.response.json();", "pm.environment.set(\"clientAuthToken4\", jsonData.token);"], "type": "text/javascript"}}],
            "request": {"method": "POST", "header": [], "body": {"mode": "raw", "raw": "{\n    \"email\": \"{{user4Email}}\",\n    \"password\": \"password123\"\n}", "options": {"raw": {"language": "json"}}}, "url": {"raw": "{{baseUrl}}/auth/login", "host": ["{{baseUrl}}"], "path": ["auth", "login"]}}
        },
        {
            "name": "3. Change Password",
            "request": {"auth": {"type": "bearer", "bearer": [{"key": "token", "value": "{{clientAuthToken4}}", "type": "string"}]}, "method": "POST", "header": [], "body": {"mode": "raw", "raw": "{\n    \"oldPassword\": \"password123\",\n    \"newPassword\": \"newpass456\",\n    \"confirmPassword\": \"newpass456\"\n}", "options": {"raw": {"language": "json"}}}, "url": {"raw": "{{baseUrl}}/auth/change-password", "host": ["{{baseUrl}}"], "path": ["auth", "change-password"]}}
        },
        {
            "name": "4. Create Playlist and Save ID",
            "event": [{"listen": "test", "script": {"exec": ["var jsonData = pm.response.json();", "pm.environment.set(\"playlistId4\", jsonData.id);"], "type": "text/javascript"}}],
            "request": {"auth": {"type": "bearer", "bearer": [{"key": "token", "value": "{{clientAuthToken4}}", "type": "string"}]}, "method": "POST", "header": [], "body": {"mode": "raw", "raw": "{\n    \"name\": \"My Awesome Playlist\",\n    \"description\": \"A collection of great videos.\"\n}", "options": {"raw": {"language": "json"}}}, "url": {"raw": "{{baseUrl}}/playlists", "host": ["{{baseUrl}}"], "path": ["playlists"]}}
        },
        {
            "name": "5. Get All Videos and Save One ID",
            "event": [{"listen": "test", "script": {"exec": ["var jsonData = pm.response.json();", "if (jsonData && jsonData.length > 0) { pm.environment.set(\"videoId\", jsonData[0].id); }"], "type": "text/javascript"}}],
            "request": {
                "method": "GET", 
                "header": [], 
                "url": {"raw": "{{baseUrl}}/videos", "host": ["{{baseUrl}}"], "path": ["videos"]}
            }
        },
        {
            "name": "6. Add Video to Playlist",
            "request": {
                "auth": {
                    "type": "bearer", 
                    "bearer": [{"key": "token", "value": "{{clientAuthToken4}}", "type": "string"}]
                }, 
                "method": "POST", 
                "header": [], 
                "url": {
                    "raw": "{{baseUrl}}/playlists/{{playlistId4}}/videos/{{videoId}}", 
                    "host": ["{{baseUrl}}"], 
                    "path": ["playlists", "{{playlistId4}}", "videos", "{{videoId}}"]
                }
            }
        }
    ],
    "variable": [{"key": "baseUrl", "value": "http://localhost:8088"}]
}
