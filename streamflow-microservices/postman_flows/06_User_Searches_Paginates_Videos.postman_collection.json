{
    "info": {
        "_postman_id": "flow-06-admin-uploads-client-manages-playlist",
        "name": "Flow 06: Admin Uploads Video, Client Manages Playlist",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "1. Login as Admin",
            "event": [
                {
                    "listen": "test",
                    "script": {
                        "exec": [
                            "var jsonData = pm.response.json();",
                            "pm.environment.set(\"adminAuthToken\", jsonData.token);"
                        ],
                        "type": "text/javascript"
                    }
                }
            ],
            "request": {
                "method": "POST",
                "header": [],
                "body": {
                    "mode": "raw",
                    "raw": "{\n    \"email\": \"admin@example.com\",\n    \"password\": \"adminpass\"\n}",
                    "options": {
                        "raw": {
                            "language": "json"
                        }
                    }
                },
                "url": {
                    "raw": "{{baseUrl}}/auth/login",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "auth",
                        "login"
                    ]
                }
            }
        },
        {
            "name": "2. Upload New Video and Save ID",
            "event": [
                {
                    "listen": "test",
                    "script": {
                        "exec": [
                            "var jsonData = pm.response.json();",
                            "pm.environment.set(\"videoId6\", jsonData.id);"
                        ],
                        "type": "text/javascript"
                    }
                }
            ],
            "request": {
                "auth": {
                    "type": "bearer",
                    "bearer": [
                        {
                            "key": "token",
                            "value": "{{adminAuthToken}}",
                            "type": "string"
                        }
                    ]
                },
                "method": "POST",
                "header": [],
                "body": {
                    "mode": "raw",
                    "raw": "{\n    \"title\": \"Flow 6 Video\",\n    \"description\": \"A video uploaded by admin in flow 6.\",\n    \"url\": \"http://example.com/video6.mp4\"\n}",
                    "options": {
                        "raw": {
                            "language": "json"
                        }
                    }
                },
                "url": {
                    "raw": "{{baseUrl}}/videos",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "videos"
                    ]
                }
            }
        },
        {
            "name": "3. Register New Client User",
            "event": [
                {
                    "listen": "prerequest",
                    "script": {
                        "exec": [
                            "pm.environment.set(\"user6Email\", pm.variables.replaceIn('user6-{{$randomFirstName}}@example.com'));"
                        ],
                        "type": "text/javascript"
                    }
                }
            ],
            "request": {
                "method": "POST",
                "header": [],
                "body": {
                    "mode": "raw",
                    "raw": "{\n    \"name\": \"Flow 6 User\",\n    \"email\": \"{{user6Email}}\",\n    \"password\": \"password123\",\n    \"confirmPassword\": \"password123\"\n}",
                    "options": {
                        "raw": {
                            "language": "json"
                        }
                    }
                },
                "url": {
                    "raw": "{{baseUrl}}/usuarios",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "usuarios"
                    ]
                }
            }
        },
        {
            "name": "4. Login as New Client User",
            "event": [
                {
                    "listen": "test",
                    "script": {
                        "exec": [
                            "var jsonData = pm.response.json();",
                            "pm.environment.set(\"clientAuthToken6\", jsonData.token);"
                        ],
                        "type": "text/javascript"
                    }
                }
            ],
            "request": {
                "method": "POST",
                "header": [],
                "body": {
                    "mode": "raw",
                    "raw": "{\n    \"email\": \"{{user6Email}}\",\n    \"password\": \"password123\"\n}",
                    "options": {
                        "raw": {
                            "language": "json"
                        }
                    }
                },
                "url": {
                    "raw": "{{baseUrl}}/auth/login",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "auth",
                        "login"
                    ]
                }
            }
        },
        {
            "name": "5. Create Playlist and Save ID",
            "event": [
                {
                    "listen": "test",
                    "script": {
                        "exec": [
                            "var jsonData = pm.response.json();",
                            "pm.environment.set(\"playlistId6\", jsonData.id);"
                        ],
                        "type": "text/javascript"
                    }
                }
            ],
            "request": {
                "auth": {
                    "type": "bearer",
                    "bearer": [
                        {
                            "key": "token",
                            "value": "{{clientAuthToken6}}",
                            "type": "string"
                        }
                    ]
                },
                "method": "POST",
                "header": [],
                "body": {
                    "mode": "raw",
                    "raw": "{\n    \"name\": \"Flow 6 Playlist\",\n    \"description\": \"A playlist created in flow 6.\"\n}",
                    "options": {
                        "raw": {
                            "language": "json"
                        }
                    }
                },
                "url": {
                    "raw": "{{baseUrl}}/playlists",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "playlists"
                    ]
                }
            }
        },
        {
            "name": "6. Add Video to Playlist",
            "request": {
                "auth": {
                    "type": "bearer",
                    "bearer": [
                        {
                            "key": "token",
                            "value": "{{clientAuthToken6}}",
                            "type": "string"
                        }
                    ]
                },
                "method": "POST",
                "header": [],
                "url": {
                    "raw": "{{baseUrl}}/playlists/{{playlistId6}}/videos/{{videoId6}}",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "playlists",
                        "{{playlistId6}}",
                        "videos",
                        "{{videoId6}}"
                    ]
                }
            }
        },
        {
            "name": "7. Get Videos from Playlist",
            "request": {
                "auth": {
                    "type": "bearer",
                    "bearer": [
                        {
                            "key": "token",
                            "value": "{{clientAuthToken6}}",
                            "type": "string"
                        }
                    ]
                },
                "method": "GET",
                "header": [],
                "url": {
                    "raw": "{{baseUrl}}/playlists/{{playlistId6}}/videos",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "playlists",
                        "{{playlistId6}}",
                        "videos"
                    ]
                }
            }
        }
    ],
    "variable": [
        {
            "key": "baseUrl",
            "value": "http://localhost:8088"
        }
    ]
}
