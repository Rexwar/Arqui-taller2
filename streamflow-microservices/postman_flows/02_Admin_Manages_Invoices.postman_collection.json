{
    "info": {
        "_postman_id": "flow-02-admin-invoices",
        "name": "Flow 02: Admin Manages Invoices",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "1. Admin Login",
            "event": [{"listen": "test", "script": {"exec": ["var jsonData = pm.response.json();", "pm.environment.set(\"adminAuthToken\", jsonData.token);"], "type": "text/javascript"}}],
            "request": {"method": "POST", "header": [], "body": {"mode": "raw", "raw": "{\n    \"email\": \"admin@example.com\",\n    \"password\": \"adminpass\"\n}", "options": {"raw": {"language": "json"}}}, "url": {"raw": "{{baseUrl}}/auth/login", "host": ["{{baseUrl}}"], "path": ["auth", "login"]}}
        },
        {
            "name": "2. Get All Invoices and Save One ID",
            "event": [{"listen": "test", "script": {"exec": ["var jsonData = pm.response.json();", "if (jsonData && jsonData.length > 0) { pm.environment.set(\"invoiceId\", jsonData[0].id); }"], "type": "text/javascript"}}],
            "request": {"auth": {"type": "bearer", "bearer": [{"key": "token", "value": "{{adminAuthToken}}", "type": "string"}]}, "method": "GET", "header": [], "url": {"raw": "{{baseUrl}}/billing/invoices", "host": ["{{baseUrl}}"], "path": ["billing", "invoices"]}}
        },
        {
            "name": "3. Mark Invoice as Paid",
            "request": {"auth": {"type": "bearer", "bearer": [{"key": "token", "value": "{{adminAuthToken}}", "type": "string"}]}, "method": "PUT", "header": [], "url": {"raw": "{{baseUrl}}/billing/invoices/{{invoiceId}}/pay", "host": ["{{baseUrl}}"], "path": ["billing", "invoices", "{{invoiceId}}", "pay"]}}
        },
        {
            "name": "4. Review Actions Log",
            "request": {"auth": {"type": "bearer", "bearer": [{"key": "token", "value": "{{adminAuthToken}}", "type": "string"}]}, "method": "GET", "header": [], "url": {"raw": "{{baseUrl}}/monitoring/actions", "host": ["{{baseUrl}}"], "path": ["monitoring", "actions"]}}
        }
    ],
    "variable": [{"key": "baseUrl", "value": "http://localhost:8088"}]
}
