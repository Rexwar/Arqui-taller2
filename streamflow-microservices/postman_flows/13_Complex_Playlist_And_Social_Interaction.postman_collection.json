{
    "info": {
        "_postman_id": "flow-13-complex-playlist-social",
        "name": "Flow 13: Complex Playlist and Social Interaction",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "1. Register and Login User",
            "event": [
                {"listen": "prerequest", "script": {"exec": ["pm.environment.set(\"user13Email\", pm.variables.replaceIn('user13-{{$randomFirstName}}@example.com'));"], "type": "text/javascript"}},
                {"listen": "test", "script": {"exec": ["var jsonData = pm.response.json();", "pm.environment.set(\"clientAuthToken13\", jsonData.token);"], "type": "text/javascript"}}
            ],
            "request": {"method": "POST", "header": [], "body": {"mode": "raw", "raw": "{\n    \"name\": \"Flow 13 User\",\n    \"email\": \"{{user13Email}}\",\n    \"password\": \"password123\",\n    \"confirmPassword\": \"password123\"\n}", "options": {"raw": {"language": "json"}}}, "url": {"raw": "{{baseUrl}}/usuarios", "host": ["{{baseUrl}}"], "path": ["usuarios"]}}
        },
        {
            "name": "2. Create Two Playlists",
            "item": [
                {
                    "name": "Create Playlist 1",
                    "event": [{"listen": "test", "script": {"exec": ["var jsonData = pm.response.json();", "pm.environment.set(\"playlistId13_1\", jsonData.id);"], "type": "text/javascript"}}],
                    "request": {"auth": {"type": "bearer", "bearer": [{"key": "token", "value": "{{clientAuthToken13}}", "type": "string"}]}, "method": "POST", "header": [], "body": {"mode": "raw", "raw": "{\n    \"name\": \"Flow 13 - Playlist 1\",\n    \"description\": \"First playlist for complex flow.\"\n}", "options": {"raw": {"language": "json"}}}, "url": {"raw": "{{baseUrl}}/playlists", "host": ["{{baseUrl}}"], "path": ["playlists"]}}
                },
                {
                    "name": "Create Playlist 2",
                    "event": [{"listen": "test", "script": {"exec": ["var jsonData = pm.response.json();", "pm.environment.set(\"playlistId13_2\", jsonData.id);"], "type": "text/javascript"}}],
                    "request": {"auth": {"type": "bearer", "bearer": [{"key": "token", "value": "{{clientAuthToken13}}", "type": "string"}]}, "method": "POST", "header": [], "body": {"mode": "raw", "raw": "{\n    \"name\": \"Flow 13 - Playlist 2\",\n    \"description\": \"Second playlist for complex flow.\"\n}", "options": {"raw": {"language": "json"}}}, "url": {"raw": "{{baseUrl}}/playlists", "host": ["{{baseUrl}}"], "path": ["playlists"]}}
                }
            ]
        },
        {
            "name": "3. Add Video to Both Playlists",
            "request": {"auth": {"type": "bearer", "bearer": [{"key": "token", "value": "{{clientAuthToken13}}", "type": "string"}]}, "method": "POST", "header": [], "url": {"raw": "{{baseUrl}}/playlists/{{playlistId13_1}}/videos/{{videoId}}", "host": ["{{baseUrl}}"], "path": ["playlists", "{{playlistId13_1}}", "videos", "{{videoId}}"]}}
        },
        {
            "name": "4. Like and Comment on a Video",
            "request": {"auth": {"type": "bearer", "bearer": [{"key": "token", "value": "{{clientAuthToken13}}", "type": "string"}]}, "method": "POST", "header": [], "body": {"mode": "raw", "raw": "{\n    \"content\": \"This is a really engaging video!\"\n}", "options": {"raw": {"language": "json"}}}, "url": {"raw": "{{baseUrl}}/social/videos/{{videoId}}/comments", "host": ["{{baseUrl}}"], "path": ["social", "videos", "{{videoId}}", "comments"]}}
        }
    ],
    "variable": [{"key": "baseUrl", "value": "http://localhost:8088"}]
}
