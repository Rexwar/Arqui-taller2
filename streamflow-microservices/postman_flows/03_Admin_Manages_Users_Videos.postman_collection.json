{
    "info": {
        "_postman_id": "flow-03-admin-users-videos",
        "name": "Flow 03: Admin Manages Users and Videos",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "1. Admin Login",
            "event": [{"listen": "test", "script": {"exec": ["var jsonData = pm.response.json();", "pm.environment.set(\"adminAuthToken\", jsonData.token);"], "type": "text/javascript"}}],
            "request": {"method": "POST", "header": [], "body": {"mode": "raw", "raw": "{\n    \"email\": \"admin@example.com\",\n    \"password\": \"adminpass\"\n}", "options": {"raw": {"language": "json"}}}, "url": {"raw": "{{baseUrl}}/auth/login", "host": ["{{baseUrl}}"], "path": ["auth", "login"]}}
        },
        {
            "name": "2. Get All Users and Save One ID",
            "event": [{"listen": "test", "script": {"exec": ["var jsonData = pm.response.json();", "const clientUsers = jsonData.filter(user => user.role === 'CLIENT');", "if (clientUsers.length > 0) { pm.environment.set(\"userIdToDelete\", clientUsers[0].id); }"], "type": "text/javascript"}}],
            "request": {"auth": {"type": "bearer", "bearer": [{"key": "token", "value": "{{adminAuthToken}}", "type": "string"}]}, "method": "GET", "header": [], "url": {"raw": "{{baseUrl}}/usuarios", "host": ["{{baseUrl}}"], "path": ["usuarios"]}}
        },
        {
            "name": "3. Delete User",
            "request": {"auth": {"type": "bearer", "bearer": [{"key": "token", "value": "{{adminAuthToken}}", "type": "string"}]}, "method": "DELETE", "header": [], "url": {"raw": "{{baseUrl}}/usuarios/{{userIdToDelete}}", "host": ["{{baseUrl}}"], "path": ["usuarios", "{{userIdToDelete}}"]}}
        },
        {
            "name": "4. Create New Video",
            "request": {"auth": {"type": "bearer", "bearer": [{"key": "token", "value": "{{adminAuthToken}}", "type": "string"}]}, "method": "POST", "header": [], "body": {"mode": "raw", "raw": "{\n    \"title\": \"New Admin Video\",\n    \"description\": \"A video created by an admin.\",\n    \"url\": \"http://example.com/admin-video.mp4\"\n}", "options": {"raw": {"language": "json"}}}, "url": {"raw": "{{baseUrl}}/videos", "host": ["{{baseUrl}}"], "path": ["videos"]}}
        }
    ],
    "variable": [{"key": "baseUrl", "value": "http://localhost:8088"}]
}
