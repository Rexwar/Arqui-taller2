{
    "info": {
        "_postman_id": "flow-14-billing-invoice",
        "name": "Flow 14: Billing and Invoice Management",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "1. Admin Login",
            "event": [{"listen": "test", "script": {"exec": ["var jsonData = pm.response.json();", "pm.environment.set(\"adminAuthToken\", jsonData.token);"], "type": "text/javascript"}}],
            "request": {"method": "POST", "header": [], "body": {"mode": "raw", "raw": "{\n    \"email\": \"admin@example.com\",\n    \"password\": \"adminpass\"\n}", "options": {"raw": {"language": "json"}}}, "url": {"raw": "{{baseUrl}}/auth/login", "host": ["{{baseUrl}}"], "path": ["auth", "login"]}}
        },
        {
            "name": "2. Create a New Invoice for a User",
            "event": [{"listen": "test", "script": {"exec": ["var jsonData = pm.response.json();", "pm.environment.set(\"invoiceId14\", jsonData.id);"], "type": "text/javascript"}}],
            "request": {"auth": {"type": "bearer", "bearer": [{"key": "token", "value": "{{adminAuthToken}}", "type": "string"}]}, "method": "POST", "header": [], "body": {"mode": "raw", "raw": "{\n    \"userId\": \"{{userIdToBill}}\",\n    \"amount\": 99.99,\n    \"description\": \"Annual Subscription Fee\"\n}", "options": {"raw": {"language": "json"}}}, "url": {"raw": "{{baseUrl}}/billing/invoices", "host": ["{{baseUrl}}"], "path": ["billing", "invoices"]}}
        },
        {
            "name": "3. Get Invoice by ID",
            "request": {"auth": {"type": "bearer", "bearer": [{"key": "token", "value": "{{adminAuthToken}}", "type": "string"}]}, "method": "GET", "header": [], "url": {"raw": "{{baseUrl}}/billing/invoices/{{invoiceId14}}", "host": ["{{baseUrl}}"], "path": ["billing", "invoices", "{{invoiceId14}}"]}}
        },
        {
            "name": "4. Mark Invoice as Paid",
            "request": {"auth": {"type": "bearer", "bearer": [{"key": "token", "value": "{{adminAuthToken}}", "type": "string"}]}, "method": "PUT", "header": [], "url": {"raw": "{{baseUrl}}/billing/invoices/{{invoiceId14}}/pay", "host": ["{{baseUrl}}"], "path": ["billing", "invoices", "{{invoiceId14}}", "pay"]}}
        },
        {
            "name": "5. Get All Invoices for a Specific User",
            "request": {"auth": {"type": "bearer", "bearer": [{"key": "token", "value": "{{adminAuthToken}}", "type": "string"}]}, "method": "GET", "header": [], "url": {"raw": "{{baseUrl}}/billing/invoices/user/{{userIdToBill}}", "host": ["{{baseUrl}}"], "path": ["billing", "invoices", "user", "{{userIdToBill}}"]}}
        }
    ],
    "variable": [{"key": "baseUrl", "value": "http://localhost:8088"}]
}
