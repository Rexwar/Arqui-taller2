{
    "info": {
        "_postman_id": "flow-07-admin-triggers-error",
        "name": "Flow 07: Admin Triggers Duplicate User Error",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "1. Login as Admin",
            "event": [
                {
                    "listen": "test",
                    "script": {
                        "exec": [
                            "var jsonData = pm.response.json();",
                            "pm.environment.set(\"adminAuthToken\", jsonData.token);"
                        ],
                        "type": "text/javascript"
                    }
                }
            ],
            "request": {
                "method": "POST",
                "header": [],
                "body": {
                    "mode": "raw",
                    "raw": "{\n    \"email\": \"admin@example.com\",\n    \"password\": \"adminpass\"\n}",
                    "options": {
                        "raw": {
                            "language": "json"
                        }
                    }
                },
                "url": {
                    "raw": "{{baseUrl}}/auth/login",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "auth",
                        "login"
                    ]
                }
            }
        },
        {
            "name": "2. Register New Client User",
            "event": [
                {
                    "listen": "prerequest",
                    "script": {
                        "exec": [
                            "pm.environment.set(\"user7Email\", pm.variables.replaceIn('user7-{{$randomFirstName}}@example.com'));"
                        ],
                        "type": "text/javascript"
                    }
                }
            ],
            "request": {
                "auth": {
                    "type": "bearer",
                    "bearer": [
                        {
                            "key": "token",
                            "value": "{{adminAuthToken}}",
                            "type": "string"
                        }
                    ]
                },
                "method": "POST",
                "header": [],
                "body": {
                    "mode": "raw",
                    "raw": "{\n    \"name\": \"Flow 7 User\",\n    \"email\": \"{{user7Email}}\",\n    \"password\": \"password123\",\n    \"confirmPassword\": \"password123\"\n}",
                    "options": {
                        "raw": {
                            "language": "json"
                        }
                    }
                },
                "url": {
                    "raw": "{{baseUrl}}/usuarios",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "usuarios"
                    ]
                }
            }
        },
        {
            "name": "3. Register Same User Again (Expect Error)",
            "request": {
                "auth": {
                    "type": "bearer",
                    "bearer": [
                        {
                            "key": "token",
                            "value": "{{adminAuthToken}}",
                            "type": "string"
                        }
                    ]
                },
                "method": "POST",
                "header": [],
                "body": {
                    "mode": "raw",
                    "raw": "{\n    \"name\": \"Flow 7 User\",\n    \"email\": \"{{user7Email}}\",\n    \"password\": \"password123\",\n    \"confirmPassword\": \"password123\"\n}",
                    "options": {
                        "raw": {
                            "language": "json"
                        }
                    }
                },
                "url": {
                    "raw": "{{baseUrl}}/usuarios",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "usuarios"
                    ]
                }
            }
        },
        {
            "name": "4. Review Error Log",
            "request": {
                "auth": {
                    "type": "bearer",
                    "bearer": [
                        {
                            "key": "token",
                            "value": "{{adminAuthToken}}",
                            "type": "string"
                        }
                    ]
                },
                "method": "GET",
                "header": [],
                "url": {
                    "raw": "{{baseUrl}}/monitoring/errors",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "monitoring",
                        "errors"
                    ]
                }
            }
        }
    ],
    "variable": [
        {
            "key": "baseUrl",
            "value": "http://localhost:8088"
        }
    ]
}
