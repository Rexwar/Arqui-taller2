{
    "info": {
        "_postman_id": "flow-10-admin-manages-categories",
        "name": "Flow 10: Admin Manages Video Categories",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "1. Admin Login",
            "event": [
                {
                    "listen": "test",
                    "script": {
                        "exec": [
                            "var jsonData = pm.response.json();",
                            "pm.environment.set(\"adminAuthToken\", jsonData.token);"
                        ],
                        "type": "text/javascript"
                    }
                }
            ],
            "request": {
                "method": "POST",
                "header": [],
                "body": {
                    "mode": "raw",
                    "raw": "{\n    \"email\": \"admin@example.com\",\n    \"password\": \"adminpass\"\n}",
                    "options": {
                        "raw": {
                            "language": "json"
                        }
                    }
                },
                "url": {
                    "raw": "{{baseUrl}}/auth/login",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "auth",
                        "login"
                    ]
                }
            }
        },
        {
            "name": "2. Create Video Category",
            "event": [
                {
                    "listen": "test",
                    "script": {
                        "exec": [
                            "var jsonData = pm.response.json();",
                            "pm.environment.set(\"categoryId10\", jsonData.id);"
                        ],
                        "type": "text/javascript"
                    }
                }
            ],
            "request": {
                "auth": {
                    "type": "bearer",
                    "bearer": [
                        {
                            "key": "token",
                            "value": "{{adminAuthToken}}",
                            "type": "string"
                        }
                    ]
                },
                "method": "POST",
                "header": [],
                "body": {
                    "mode": "raw",
                    "raw": "{\n    \"name\": \"Category by Admin Flow 10\",\n    \"description\": \"A new category for videos created by admin.\"\n}",
                    "options": {
                        "raw": {
                            "language": "json"
                        }
                    }
                },
                "url": {
                    "raw": "{{baseUrl}}/videos/categories",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "videos",
                        "categories"
                    ]
                }
            }
        },
        {
            "name": "3. Get All Categories",
            "request": {
                "auth": {
                    "type": "bearer",
                    "bearer": [
                        {
                            "key": "token",
                            "value": "{{adminAuthToken}}",
                            "type": "string"
                        }
                    ]
                },
                "method": "GET",
                "header": [],
                "url": {
                    "raw": "{{baseUrl}}/videos/categories",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "videos",
                        "categories"
                    ]
                }
            }
        },
        {
            "name": "4. Update Category",
            "request": {
                "auth": {
                    "type": "bearer",
                    "bearer": [
                        {
                            "key": "token",
                            "value": "{{adminAuthToken}}",
                            "type": "string"
                        }
                    ]
                },
                "method": "PUT",
                "header": [],
                "body": {
                    "mode": "raw",
                    "raw": "{\n    \"name\": \"Updated Category Name Flow 10\",\n    \"description\": \"Updated description.\"\n}",
                    "options": {
                        "raw": {
                            "language": "json"
                        }
                    }
                },
                "url": {
                    "raw": "{{baseUrl}}/videos/categories/{{categoryId10}}",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "videos",
                        "categories",
                        "{{categoryId10}}"
                    ]
                }
            }
        },
        {
            "name": "5. Delete Category",
            "request": {
                "auth": {
                    "type": "bearer",
                    "bearer": [
                        {
                            "key": "token",
                            "value": "{{adminAuthToken}}",
                            "type": "string"
                        }
                    ]
                },
                "method": "DELETE",
                "header": [],
                "url": {
                    "raw": "{{baseUrl}}/videos/categories/{{categoryId10}}",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "videos",
                        "categories",
                        "{{categoryId10}}"
                    ]
                }
            }
        }
    ],
    "variable": [
        {
            "key": "baseUrl",
            "value": "http://localhost:8088"
        }
    ]
}
